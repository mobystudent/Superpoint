nav.tabs
	.tabs__wrap.tabs__wrap--active
		button#showtabs.tabs__btn.tabs__btn--show(type="button")
			svg.icon.icon--switch
				use.icon__item(xlink:href='#switch')
		ul.tabs__list
			
			- for (let i = 0; i < 6; i++)
				li.tabs__item(class=`${ i === 0 ? 'tabs__item--active' : '' }`)
					button.tabs__btn.tabs__btn--point(type="button" data-tab=`point-${i + 1}`)
						svg.icon(class=`icon--point-${i + 1}`)
							use.icon__item(xlink:href=`#tab${i + 1}`)
						span.tabs__name
							| Point #{i + 1}
